<div>
    <p>Title: @Movie.Title</p>
    <p>Release Date: <b>@Movie.ReleaseDate.Value.ToString("dd/MM/yyyy")</b></p>
    <div>
        @if (DisplayButtons)
        {
            <div>
                <button @onclick="(()=> DeleteMovie.InvokeAsync(Movie))"> Delete </button>
            </div>
        }
    </div>
</div>

@code{

    [Parameter]
    public EventCallback<MovieDTO> DeleteMovie { get; set; }

    [Parameter]
    public MovieDTO Movie { get; set; }

    [Parameter]
    public bool DisplayButtons { get; set; } = false;

    private void Delete()
    {
        Console.WriteLine($"Deleting {Movie.Title}");
    }
}